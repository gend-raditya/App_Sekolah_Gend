<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".DetailSekolahActivity">

    <TextView
        android:id="@+id/tvNamaSekolah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Sekolah"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/imgSekolah"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/sma1padang"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tvDeskripsiSekolah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi Sekolah"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnLokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasi Wisata"
        android:layout_marginTop="10dp"
        />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        />

</LinearLayout>